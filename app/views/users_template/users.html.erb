<h1> <%= @user.username %> </h1>

<dl>
 <dt> ID </dt>
 <dd> <%= @user.id %> </dd>
 <dt> Edit user </dt>
 <dd> 
   <form action="/update_user/<%= @user.id %>" method="post">
     <label for="browser_username"> Username </label>
     <input id="browser_username" type="text" name="new_username" value="<%= @user.username %>">
       <button> Update user </button>
   </form>
 </dd>
</dl>

<h2> Own photos (<%= @user.own_photos.count %>) </h2>

<table border="1">
  <tr>
    <th> Image </th>
    <th> Owner </th>
    <th> Caption </th>
    <th> Posted </th>
    <th> </th>
  </tr>

  <% @user.own_photos.each do |u| %>
  <tr>
    <td> <img src="<%= u.image %>"> </td>
    <td> <%= @user.username %> </td>
    <td> <%= u.caption %> </td>
        <td> <%= u.updated_at %> </td>
    <td> <a href="/photos/<%= u.id %>"> Show details </a></td>
  </tr>
  <% end %>
</table>
